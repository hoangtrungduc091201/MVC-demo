extends ../layouts/common.pug

block content
    h1  Login

    if errors
        each error in errors
            .alert.alert-danger= error
    form( method="POST")
        .form-group
            label(for="email") Import email
            input#email(name="email", type="text",class="form-control",value = values ? values.email : '', placeholder="Email")
        .form-group
            label(for="password") Import password
            input#password(name="password", type="password",class="form-control",value = values ? values.password : '', placeholder="Password")    
        button.btn.btn-primary Login